<form {{action 'authenticate' on='submit'}} class="login-form">
  <div class="form-group">
    <label for="identification">Email</label>
    {{input id='identification' placeholder='Enter email' value=identification class='form-control'}}
  </div>
  
  <div class="form-group">
    <label for="password">Password</label>
    {{input id='password' placeholder='Enter Password' type='password' value=password class='form-control'}}
  </div>

  <div class="form-group">
    <button type="submit" class="btn btn-primary btn-block">Login</button>
  </div>
</form>